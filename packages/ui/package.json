{
  "name": "@packages/ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": false,
  "files": [
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./styles.css": "./src/styles.css",
    "./atoms/*": {
      "types": "./src/atoms/*/index.ts",
      "default": "./src/atoms/*/index.ts"
    },
    "./molecules/*": {
      "types": "./src/molecules/*/index.ts",
      "default": "./src/molecules/*/index.ts"
    },
    "./organisms/*": {
      "types": "./src/organisms/*/index.ts",
      "default": "./src/organisms/*/index.ts"
    },
    "./providers/*": {
      "types": "./src/providers/*/index.ts",
      "default": "./src/providers/*/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/*"
      ]
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "dependencies": {
    "@packages/types": "*",
    "@packages/validators": "*",
    "@packages/storage": "*",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@config/tailwind": "*",
    "@config/typescript": "*",
    "@tailwindcss/postcss": "^4.1.0",
    "@types/react": "^19.2.0",
    "babel-plugin-react-compiler": "^19.0.0-beta-26db446-20241205",
    "eslint-plugin-react-compiler": "^19.0.0-beta-26db446-20241205",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.8.3"
  }
}
