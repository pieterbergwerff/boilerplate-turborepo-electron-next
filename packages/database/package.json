{
    "name": "@packages/database",
    "version": "1.0.0",
    "private": true,
    "main": "./src/index.ts",
    "module": "./src/index.ts",
    "types": "./src/index.ts",
    "sideEffects": false,
    "files": [
        "src"
    ],
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts",
            "require": "./dist/index.js"
        },
        "./*": {
            "types": "./src/*.ts",
            "import": "./src/*.ts",
            "require": "./dist/*.js"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "./src/*"
            ]
        }
    },
    "scripts": {
        "build": "tsc",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src",
        "format": "prettier --write src",
        "format:check": "prettier --check src",
        "clean": "rm -rf dist",
        "db:seed": "node scripts/generate-seed.mjs"
    },
    "dependencies": {
        "knex": "^3.1.0",
        "sqlite3": "^5.1.7",
        "@packages/validators": "*"
    },
    "devDependencies": {
        "@config/typescript": "*",
        "@types/node": "^25.0.0",
        "typescript": "^5.8.3"
    }
}
