{
  "name": "boilerplate-turborepo-electron-next",
  "version": "1.0.0",
  "description": "Electron + Next.js Translation Application with Turborepo",
  "author": "Pieter Bergwerff",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "clean": "turbo clean",
    "build": "turbo build",
    "build:next": "turbo build --filter=@apps/app",
    "build:electron": "npm run build:next && turbo build --filter=@apps/desktop && turbo build:electron --filter=@apps/desktop",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@apps/app",
    "dev:desktop": "turbo dev --filter=@apps/desktop",
    "start": "turbo start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo type-check",
    "test": "turbo test",
    "test:ui": "turbo test:ui",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "echo 'E2E tests would run here'",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "quality:fix": "npm run format && npm run lint:fix && npm run typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@turbo/gen": "^2.3.4",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "bundlewatch": "^0.4.1",
    "complexity-report": "^2.0.0-alpha",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.3.0",
    "next": "^16.1.0",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "ts-complex": "^1.0.0",
    "tsc-watch": "7.2.0",
    "turbo": "^2.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "electron-default-menu": "^1.0.2",
    "iron-session": "^8.0.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ]
}
