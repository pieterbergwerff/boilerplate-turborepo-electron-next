{
    "name": "@apps/desktop",
    "version": "1.0.0",
    "description": "Electron desktop app for the boilerplate project",
    "author": "Pieter Bergwerff",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "clean": "rm -rf dist .tscache build nextjs-standalone",
        "copy-nextjs": "mkdir -p nextjs-standalone && cp -r ../app/.next/standalone/* nextjs-standalone/ && cp -r ../app/.next/static nextjs-standalone/",
        "build": "tsc",
        "dev": "tsc-watch --noClear --onSuccess 'electron .' --project tsconfig.json",
        "start": "tsc-watch --noClear --onSuccess 'electron .' --project tsconfig.json",
        "build:electron": "npm run copy-nextjs && electron-builder --config electron-builder.yml",
        "lint": "echo \"Lint desktop app - skipped for now\"",
        "lint:fix": "eslint src --ext .ts --fix",
        "type-check": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "echo \"No tests in desktop package - skipped\""
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "electron-default-menu": "^1.0.2",
        "mime-types": "^2.1.35"
    },
    "devDependencies": {
        "@config/typescript": "*",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "electron": "39.2.7",
        "electron-builder": "^26.0.12",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4",
        "tsc-watch": "7.2.0",
        "typescript": "^5.8.3"
    }
}
