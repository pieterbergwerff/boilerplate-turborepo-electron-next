{
  "name": "@apps/desktop",
  "version": "1.0.0",
  "description": "Electron desktop app for the boilerplate project",
  "author": "Pieter Bergwerff",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist .tscache build",
    "build": "tsc",
    "dev": "tsc-watch --noClear --onSuccess 'electron .' --project tsconfig.json",
    "start": "tsc-watch --noClear --onSuccess 'electron .' --project tsconfig.json",
    "build:electron": "electron-builder --config electron-builder.yml",
    "lint": "echo \"Lint desktop app - skipped for now\"",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "electron-default-menu": "^1.0.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@config/typescript": "*",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "electron-builder": "^26.0.12",
    "electron": "39.2.7",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsc-watch": "7.2.0",
    "typescript": "^5.8.3"
  }
}
